pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
    
    node {
        /* triggers the checkout of the current git commit that triggered the pipeline (webhook) */
        checkout scm 
        /* .. snip .. */
    }
}